<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="320.0" prefWidth="200.0" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.startPageController">
        <Label text="Welcome! Please select a restaurant:" />

        <ChoiceBox fx:id="restaurantChoiceBox" prefWidth="200" />

        <Button fx:id="adminSignInButton" prefWidth="150" text="Admin Sign In" />
        <Button fx:id="viewOrderButton" prefWidth="150" text="View Order" />
        <Button fx:id="viewReservationButton" prefWidth="150" text="View Reservation" />
        <Button fx:id="continueButton" prefWidth="150" text="Continue" />
        <Button fx:id="exitButton" prefWidth="150" text="Exit" />

        <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
</VBox>
