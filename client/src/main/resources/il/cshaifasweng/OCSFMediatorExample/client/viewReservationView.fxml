<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="505.0" prefWidth="656.0" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.viewReservationsController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>


    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="View Your Reservations" />

    <HBox spacing="10">
        <Label text="Enter ID:" />
        <TextField fx:id="idField" promptText="Customer ID" />
        <Button fx:id="searchButton" text="Search Reservations" />
    </HBox>

    <TableView fx:id="reservationsTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="reservationIdColumn" text="Order ID" />
         <TableColumn fx:id="restaurantColumn" prefWidth="147.20001220703125" text="Restaurant Name" />
            <TableColumn fx:id="dateColumn" prefWidth="124.0" text="Date" />
            <TableColumn fx:id="numberOfGuestsColumn" minWidth="0.0" prefWidth="165.60003662109375" text="Number Of Guests" />
            <TableColumn fx:id="actionColumn" prefWidth="100.79998779296875" text="Action" />
        </columns>
    </TableView>

    <Label fx:id="messageLabel" style="-fx-text-fill: green;" text="" wrapText="true" />
    <Button onAction="#handleBack" text="Back" />
</VBox>
