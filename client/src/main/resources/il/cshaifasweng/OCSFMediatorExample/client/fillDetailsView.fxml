<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="il.cshaifasweng.OCSFMediatorExample.client.fillDetailsController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Complete Your Order" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="150" />
            <ColumnConstraints prefWidth="250" />
        </columnConstraints>

        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" promptText="Enter your full name" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="ID Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="idField" promptText="Enter your ID number" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Delivery Address:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="addressField" promptText="Enter your delivery address" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Delivery Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <DatePicker fx:id="datePicker" promptText="Select delivery date" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Delivery Time:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <ComboBox fx:id="hourCombo" prefWidth="80" />
            <Label text=":" />
            <ComboBox fx:id="minuteCombo" prefWidth="80" />
        </HBox>

        <Label text="Credit Card:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="creditCardField" promptText="Enter credit card number" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;" />

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="confirmButton" text="Confirm Order" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="150" />
        <Button fx:id="cancelButton" text="Cancel" style="-fx-background-color: #f44336; -fx-text-fill: white;" prefWidth="150" />
    </HBox>
</VBox>